#include<stdio.h>
int main()
{
	int a[5][5],b[5][5],sum=0,i,j,r,c;
	printf("enter the number of rows and columns\n");
	scanf("%d%d",&r,&c);
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
		printf("enter the a[%d][%d] \n",i,j);
		scanf("%d",&a[i][j]);
		}	
	}
	printf("\n\n");
	printf("elements of  matrix \n");
		for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
		    printf("%d\t",a[i][j]);
		}
		printf("\n\n");
	}
	printf("sum of digonl matrix \n");
	for(i=0;i<r;i++)
	{
		for(j=0;j<c;j++)
		{
		    if(i==j)
		    sum+=a[i][j];
		}
	}
	
		printf("%d\t",sum);
		printf("\n");
	return 0;
}



