     printf("%d\t",i); 
     j--;
    }
    printf("\n");
    i--;
    }
    printf("\n\n\n");
    /* new progrm*/
    i=1;
    while(i<=5)
    {
        j=i;
        while(j>=1)
         {
     printf("%d\t",j); 
     j--;
    }
    printf("\n");
    i++;
    }
    /*new progrm*/
    
    printf("\n\n\n");
    i=5;
    while(i>=1)
    {
        j=i;
        while(j>=1)
         {
     printf("%d\t",j); 
