    {
        j=1;
        while(j<=i)
         {
     printf("%d\t",i); 
     j++;
    }
    printf("\n");
    i++;
    }
    printf("\n\n\n");
    /* new progrm*/
    i=1;
    while(i>=5)
    {
        j=5;
        while(j>=i)
         {
     printf("%d\t",i); 
     j--;
    }
    printf("\n");
    i++;
    }
    /*new progrm*/
    
    printf("\n\n\n");
